<%= form_with(model: product, class: "form-container shadow p-4 bg-white rounded") do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h5>
      <ul class="mb-0">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Product Name", class: "form-label fw-bold" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter product name" %>
  </div>

  <div class="mb-3">
    <%= form.label :total_box, "Total Boxes", class: "form-label fw-bold" %>
    <%= form.number_field :total_box, class: "form-control", placeholder: "Enter the number of boxes" %>
  </div>

  <div class="mb-3">
    <%= form.label :item_per_box, "Items Per Box", class: "form-label fw-bold" %>
    <%= form.number_field :item_per_box, class: "form-control", placeholder: "Enter items per box" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description", class: "form-label fw-bold" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter a description", rows: 5 %>
  </div>

  <div class="text-center">
    <%= form.submit "Save Product", class: "btn btn-primary px-5 py-2" %>
  </div>
<% end %>
