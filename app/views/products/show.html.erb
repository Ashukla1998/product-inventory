<% content_for :title, @product.name %>

<div class="container mt-5">
  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card shadow-sm border-0">
    <div class="card-body">
      <h2 class="card-title text-primary mb-4"><%= @product.name %></h2>

      <p class="card-text"><strong>Total Boxes:</strong> <%= @product.total_box %></p>
      <p class="card-text"><strong>Items Per Box:</strong> <%= @product.item_per_box %></p>
      <p class="card-text"><strong>Description:</strong> <%= @product.description %></p>
      <p class="card-text"><strong>Total Items:</strong> <%= @product.total_box * @product.item_per_box %></p>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to "Edit this Product", edit_product_path(@product), class: "btn btn-warning" %>
        <%= link_to "Back to Products", products_path, class: "btn btn-secondary" %>

        <%= button_to "Destroy this Product", @product, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this product?" } %>
      </div>
    </div>
  </div>
</div>
