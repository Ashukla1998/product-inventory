<% content_for :title, "Edit Product" %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card shadow border-0">
        <div class="card-body">
          <h1 class="card-title text-center text-primary mb-4">Edit Product</h1>
          
          <!-- Render the form partial -->
          <%= render "form", product: @product %>

          <hr class="my-4">

          <div class="d-flex justify-content-between">
            <%= link_to "Show Product", @product, class: "btn btn-outline-primary" %>
            <%= link_to "Back to Products", products_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
